<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/textPrimary</item>
        <item name="android:textColorSecondary">@color/textSecondary</item>
    </style>

    <style name="AppTheme.Fullscreen">
        <item name="android:windowFullscreen">true</item>
        <item name="android:background">@color/colorPrimaryDark</item>
    </style>

    <style name="ThemeOverlay.Button" parent="ThemeOverlay.AppCompat.Dark">
        <item name="colorButtonNormal">@color/colorAccent</item>
        <item name="android:layout_marginRight">@dimen/mini_margin</item>
        <item name="android:layout_marginLeft">@dimen/mini_margin</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="ThemeOverlay.StandardText" parent="AppTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fadeScrollbars">true</item>
        <item name="android:gravity">center</item>
        <item name="android:maxLines">5</item>
        <item name="android:padding">@dimen/mini_padding</item>
        <item name="android:scrollbars">vertical</item>
        <item name="android:textSize">@dimen/standard_text_size</item>
    </style>

    <style name="ThemeOverlay.HeadingText" parent="AppTheme">
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/heading_standard_text_size</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TabLayoutStyle" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/colorAccent</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabPaddingStart">@dimen/small_padding</item>
        <item name="tabPaddingEnd">@dimen/small_padding</item>
        <item name="tabBackground">?attr/selectableItemBackground</item>
        <item name="tabTextAppearance">@style/TabTextAppearance</item>
        <item name="tabSelectedTextColor">@color/textPrimary</item>
    </style>

    <style name="TabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/standard_text_size</item>
        <item name="android:textColor">@color/textSecondary</item>
        <item name="textAllCaps">true</item>
    </style>

</resources>
